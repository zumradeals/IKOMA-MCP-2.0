[Unit]
Description=IKOMA MCP Deployer (worker)
After=network.target

[Service]
Type=simple
Restart=always
User=ikoma
Group=ikoma
WorkingDirectory=/opt/ikoma/code
EnvironmentFile=/etc/ikoma/deployer.env
ExecStart=/opt/ikoma/venv/bin/python -m ikoma_mcp.deployer.main

[Install]
WantedBy=multi-user.target
