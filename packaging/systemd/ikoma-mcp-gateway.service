[Unit]
Description=IKOMA MCP Gateway (passive)
After=network.target

[Service]
Type=simple
Restart=always
User=ikoma
Group=ikoma
WorkingDirectory=/opt/ikoma/code
EnvironmentFile=/etc/ikoma/gateway.env
ExecStart=/opt/ikoma/venv/bin/python -m ikoma_mcp.gateway.main

[Install]
WantedBy=multi-user.target
